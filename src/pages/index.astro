---
import Layout from '../layouts/Layout.astro';
import ResumeHero from '../components/ResumeHero.astro';
import ResumeProfile from '../components/ResumeProfile.astro';
import ResumeExperience from '../components/ResumeExperience.astro';
import ResumeEducation from '../components/ResumeEducation.astro';
import ResumeServices from '../components/ResumeServices.astro';
import ResumeSkills from '../components/ResumeSkills.astro';
import ResumeLinks from '../components/ResumeLinks.astro';
import ResumeCertifications from '../components/ResumeCertifications.astro';
---

<Layout>
	<main class="resume">
		<ResumeHero />

		<section class="resume__content">
			<section class="resume__column resume__column--main">
				<ResumeProfile />
				<ResumeExperience />
				<ResumeEducation />
			</section>

			<section class="resume__column resume__column--side">
				<ResumeServices />
				<ResumeSkills />
				<ResumeCertifications />
				<ResumeLinks />
			</section>
		</section>
	</main>

<style is:global>
	.resume {
		max-width: 1120px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.resume__content {
		display: grid;
		grid-template-columns: minmax(0, 1.7fr) minmax(0, 1.1fr);
		gap: 1.5rem;
	}

	.card {
		background: rgba(15, 23, 42, 0.85);
		border-radius: 1.25rem;
		padding: 1.25rem 1.5rem;
		border: 1px solid rgba(148, 163, 184, 0.3);
		box-shadow: 0 18px 40px rgba(15, 23, 42, 0.55);
		margin: 0.75rem 0;
	}

	.card h2 {
		margin-top: 0;
		margin-bottom: 0.9rem;
		padding-bottom: 0.4rem;
		font-size: 0.95rem;
		font-weight: 600;
		letter-spacing: 0.14em;
		text-transform: uppercase;
		color: var(--accent-soft);
		border-bottom: 1px solid rgba(148, 163, 184, 0.45);
	}

	.entry__meta {
		margin: 0.1rem 0 0.4rem;
		font-size: 0.85rem;
		color: var(--text-muted);
	}

	@media (max-width: 900px) {
		.resume__content {
			grid-template-columns: minmax(0, 1fr);
		}
	}

	@media (max-width: 640px) {
		.resume {
			padding-inline: 0.25rem;
		}

		.card {
			padding: 1rem 1rem;
		}
	}
</style>
