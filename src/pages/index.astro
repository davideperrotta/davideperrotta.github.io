---
import Layout from '../layouts/Layout.astro';
import ResumeHero from '../components/ResumeHero.astro';
import ResumeProfile from '../components/ResumeProfile.astro';
import ResumeExperience from '../components/ResumeExperience.astro';
import ResumeEducation from '../components/ResumeEducation.astro';
import ResumeServices from '../components/ResumeServices.astro';
import ResumeSkills from '../components/ResumeSkills.astro';
import ResumeLinks from '../components/ResumeLinks.astro';
---

<Layout>
	<main class="resume">
		<ResumeHero />

		<section class="resume__content">
			<section class="resume__column resume__column--main">
				<ResumeProfile />
				<ResumeExperience />
				<ResumeEducation />
			</section>

			<section class="resume__column resume__column--side">
				<ResumeServices />
				<ResumeSkills />
				<ResumeLinks />
			</section>
		</section>
	</main>

<style global>
	.resume {
		max-width: 1120px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.resume__hero {
		display: grid;
		grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
		gap: 1.5rem;
		align-items: center;
	}

	.resume__avatar {
		display: flex;
		justify-content: center;
	}

	.resume__avatar img {
		width: 140px;
		height: 140px;
		border-radius: 999px;
		object-fit: cover;
		border: 3px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 18px 40px rgba(0, 0, 0, 0.25);
	}

	.resume__headline h1 {
		margin: 0 0 0.25rem;
		font-size: 2.1rem;
	}

	.resume__role {
		margin: 0 0 0.25rem;
		font-weight: 500;
		color: var(--accent-strong);
	}

	.resume__location {
		margin: 0;
		color: var(--text-muted);
	}

	.resume__meta {
		justify-self: flex-end;
	}

	.resume__meta dl {
		margin: 0 0 1rem;
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 0.75rem 1.25rem;
	}

	.resume__meta dt {
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--text-muted);
	}

	.resume__meta dd {
		margin: 0.1rem 0 0;
		font-weight: 500;
	}

	.resume__links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.resume__links a {
		padding: 0.45rem 0.75rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.6);
		font-size: 0.85rem;
		text-decoration: none;
		color: inherit;
		background: rgba(15, 23, 42, 0.04);
		backdrop-filter: blur(12px);
		transition: background 0.18s ease, color 0.18s ease, border-color 0.18s ease;
	}

	.resume__links a:hover {
		background: var(--accent);
		border-color: transparent;
		color: white;
	}

	.resume__content {
		display: grid;
		grid-template-columns: minmax(0, 1.7fr) minmax(0, 1.1fr);
		gap: 1.5rem;
	}

	.card {
		background: rgba(15, 23, 42, 0.85);
		border-radius: 1.25rem;
		padding: 1.25rem 1.5rem;
		border: 1px solid rgba(148, 163, 184, 0.3);
		box-shadow: 0 18px 40px rgba(15, 23, 42, 0.55);
		margin: 0.75rem 0;
	}

	.card h2 {
		margin-top: 0;
		margin-bottom: 0.75rem;
		font-size: 1.1rem;
	}

	.entry {
		& + .entry {
			margin-top: 1.25rem;
			padding-top: 1.25rem;
			border-top: 1px solid rgba(148, 163, 184, 0.4);
		}
	}

	.entry__meta {
		margin: 0.1rem 0 0.4rem;
		font-size: 0.85rem;
		color: var(--text-muted);
	}

	.entry ul {
		margin: 0.15rem 0 0;
		padding-left: 1.1rem;
	}

	.entry li {
		margin: 0.15rem 0;
	}

	.timeline {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.timeline li + li {
		margin-top: 0.9rem;
		padding-top: 0.9rem;
		border-top: 1px dashed rgba(148, 163, 184, 0.5);
	}

	.tags {
		list-style: none;
		margin: 0 0 0.9rem;
		padding: 0;
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
	}

	.tags li {
		padding: 0.25rem 0.55rem;
		border-radius: 999px;
		background: rgba(15, 23, 42, 0.75);
		border: 1px solid rgba(148, 163, 184, 0.6);
		font-size: 0.78rem;
	}

	.logos {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
		align-items: center;
	}

	.logos img {
		width: 32px;
		height: 32px;
		object-fit: contain;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 0.9rem 1.2rem;
	}

	.skills-grid h3 {
		margin: 0 0 0.25rem;
		font-size: 0.9rem;
	}

	.skills-grid ul {
		margin: 0;
		padding-left: 1rem;
	}

	.skills-grid li {
		margin: 0.12rem 0;
	}

	.links-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.links-list li + li {
		margin-top: 0.35rem;
	}

	.links-list a {
		color: var(--accent-soft);
		text-decoration: none;
	}

	.links-list a:hover {
		text-decoration: underline;
	}

	@media (max-width: 900px) {
		.resume__hero {
			grid-template-columns: minmax(0, 1fr);
		}

		.resume__meta {
			justify-self: flex-start;
		}

		.resume__content {
			grid-template-columns: minmax(0, 1fr);
		}
	}

	@media (max-width: 640px) {
		.resume {
			padding-inline: 0.25rem;
		}

		.card {
			padding: 1rem 1rem;
		}

		.resume__meta dl {
			grid-template-columns: minmax(0, 1fr);
		}
	}
</style>
