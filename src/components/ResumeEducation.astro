---
const { education } = Astro.props;
---

<section class="card" aria-labelledby="education-title">
	<h2 id="education-title">{education.title}</h2>
	<ul class="timeline">
		{education.entries?.map((entry: { title: string; meta: string }) => (
			<li class="timeline-item">
				<h3>{entry.title}</h3>
				<p class="entry__meta">{entry.meta}</p>
			</li>
		))}
	</ul>
</section>

<style>
	.timeline {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.timeline li + li {
		margin-top: 0.9rem;
		padding-top: 0.9rem;
		border-top: 1px dashed rgba(148, 163, 184, 0.5);
	}
</style>
