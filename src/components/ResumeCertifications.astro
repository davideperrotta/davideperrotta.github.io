---
const { certifications } = Astro.props;
---

<section class="card" aria-labelledby="certifications-title">
	<h2 id="certifications-title">{certifications.title}</h2>
	<ul class="certifications">
		{certifications.items?.map((item: string) => (
			<li>{item}</li>
		))}
	</ul>
</section>

<style>
	.certifications {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.certifications li + li {
		margin-top: 0.35rem;
	}
</style>
