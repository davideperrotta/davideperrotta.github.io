---
const { hero } = Astro.props;
---

<section class="resume__hero">
	<div class="resume__avatar">
		<img
			src={hero.avatarUrl}
			alt={`Portrait of ${hero.name}`}
			loading="lazy"
		/>
	</div>
	<div class="resume__headline">
		<h1>{hero.name}</h1>
		<p class="resume__role">{hero.role}</p>
		<p class="resume__location">{hero.location}</p>
	</div>
	<div class="resume__meta">
		<dl>
			<div>
				<dt>{hero.bornLabel}</dt>
				<dd>{hero.bornValue}</dd>
			</div>
			<div>
				<dt>{hero.degreeLabel}</dt>
				<dd>{hero.degreeValue}</dd>
			</div>
			<div>
				<dt>{hero.experienceLabel}</dt>
				<dd>{hero.experienceValue}</dd>
			</div>
			<div>
				<dt>{hero.languagesLabel}</dt>
				<dd>{hero.languagesValue}</dd>
			</div>
			<div>
				<dt>{hero.hobbiesLabel}</dt>
				<dd>{hero.hobbiesValue}</dd>
			</div>
			<div>
				<dt>{hero.sportsLabel}</dt>
				<dd>{hero.sportsValue}</dd>
			</div>
		</dl>
		<div class="resume__links">
			{hero.links?.map((link) => (
				<a href={link.url} rel="noopener noreferrer" target="_blank">
					{link.label}
				</a>
			))}
		</div>
	</div>
</section>

<style>
	.resume__hero {
		display: grid;
		grid-template-columns: auto minmax(0, 1fr);
		column-gap: 1.75rem;
		row-gap: 1rem;
		align-items: start;
	}

	.resume__avatar {
		display: flex;
		justify-content: center;
		grid-row: 1 / span 2;
		grid-column: 1;
	}

	.resume__avatar img {
		width: 140px;
		height: 140px;
		border-radius: 999px;
		object-fit: cover;
		border: 3px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 18px 40px rgba(0, 0, 0, 0.25);
	}

	.resume__headline h1 {
		margin: 0 0 0.25rem;
		font-size: 2.1rem;
	}

	.resume__role {
		margin: 0 0 0.25rem;
		font-weight: 500;
		color: var(--accent-strong);
	}

	.resume__location {
		margin: 0;
		color: var(--text-muted);
	}

	.resume__meta {
		text-align: left;
		grid-column: 2;
		grid-row: 2;
	}

	.resume__meta dl {
		margin: 0 0 1rem;
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 0.75rem 1.25rem;
	}

	.resume__meta dt {
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--text-muted);
	}

	.resume__meta dd {
		margin: 0.1rem 0 0;
		font-weight: 500;
	}

	.resume__links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.resume__links a {
		padding: 0.45rem 0.75rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.6);
		font-size: 0.85rem;
		text-decoration: none;
		color: inherit;
		background: rgba(15, 23, 42, 0.04);
		backdrop-filter: blur(12px);
		transition: background 0.18s ease, color 0.18s ease, border-color 0.18s ease;
	}

	.resume__links a:hover {
		background: var(--accent);
		border-color: transparent;
		color: white;
	}

	@media (max-width: 640px) {
		.resume__hero {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			gap: 1rem;
		}

		.resume__meta {
			align-self: stretch;
			text-align: left;
		}
	}

</style>
