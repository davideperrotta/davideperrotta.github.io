---
const { services } = Astro.props;
---

<section class="card" aria-labelledby="services-title">
	<h2 id="services-title">{services.title}</h2>
	<ul class="tags">
		{services.tags?.map((tag: string) => (
			<li>{tag}</li>
		))}
	</ul>
	<div class="logos" aria-label="Most used technologies">
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/React.svg" alt="React" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/Node.js.svg" alt="Node.js" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/MongoDB.svg" alt="MongoDB" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/Redis.svg" alt="Redis" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/AWS.svg" alt="AWS" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/Docker.svg" alt="Docker" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/Next.js.svg" alt="Next.js" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/Nest.js.svg" alt="Nest.js" loading="lazy" />
		<img src="https://davideperrotta.github.io/davideperrotta-vite-vue/icons/flutter.svg" alt="Flutter" loading="lazy" />
	</div>
</section>

<style>
	.tags {
		list-style: none;
		margin: 0 0 0.9rem;
		padding: 0;
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
	}

	.tags li {
		padding: 0.25rem 0.55rem;
		border-radius: 999px;
		background: rgba(15, 23, 42, 0.75);
		border: 1px solid rgba(148, 163, 184, 0.6);
		font-size: 0.78rem;
	}

	.logos {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
		align-items: center;
	}

	.logos img {
		width: 32px;
		height: 32px;
		object-fit: contain;
	}
</style>
