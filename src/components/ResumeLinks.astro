---
const { links } = Astro.props;
---

<section class="card" aria-labelledby="links-title">
	<h2 id="links-title">{links.title}</h2>
	<ul class="links-list">
		{links.links?.map((link: { label: string; url: string }) => (
			<li>
				<a href={link.url} target="_blank" rel="noopener noreferrer">{link.label}</a>
			</li>
		))}
	</ul>
</section>

<style>
	.links-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.links-list li + li {
		margin-top: 0.35rem;
	}

	.links-list a {
		color: var(--accent-soft);
		text-decoration: none;
	}

	.links-list a:hover {
		text-decoration: underline;
	}
</style>
